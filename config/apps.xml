<?xml version="1.0" encoding="UTF-8"?>

<!-- see http://maven.apache.org/settings.html -->

<settings>
   <!-- <localRepository>file://${user.home}/.m2/repository</localRepository> -->
   <!--  <offline>false</offline>  -->
   <profiles>
      <profile>
         <activation>
            <activeByDefault>true</activeByDefault>
         </activation>
         <repositories>
            <repository>
               <id>xbib-repo</id>
               <name>Xbib Release Repository</name>
               <url>https://raw.github.com/xbib/maven-repo/master/releases</url>
               <releases>
                  <enabled>true</enabled>
                  <updatePolicy>daily</updatePolicy>
               </releases>
            </repository>
            <repository>
               <id>xbib-repo-snapshots</id>
               <name>Xbib Snapshot Repository</name>
               <url>https://raw.github.com/xbib/maven-repo/master/snapshots</url>
               <snapshots>
                  <enabled>true</enabled>
                  <updatePolicy>always</updatePolicy>
               </snapshots>
            </repository>
         </repositories>
      </profile>
   </profiles>

</settings>